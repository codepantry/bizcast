%h1 Listing cards

%table
  %tr
    %th Business name
    %th User
    %th Message title
    %th Message description
    %th
    %th
    %th
    %th Expires on

  - @cards.each do |card|
    %tr
      %td= card.business_name
      %td= card.user_id
      %td= card.message_title
      %td= card.message_description
      %td= link_to 'Show', card
      %td= link_to 'Edit', edit_card_path(card)
      %td= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }
      %td= (card.created_at + 14.days).strftime("%m-%d-%Y")

%br

= link_to 'New Card', new_card_path
